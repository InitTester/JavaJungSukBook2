class Document {
	static int count = 0;
	String name;	//문서명(Document name)
	
	public Document() {	// 문서 생성 시 문서명을 지정하지 않았을 때
		this("제목없음"+ ++count);
	}
	
	public Document(String name) {
		this.name = name;
		System.out.println("문서 " +this.name + "가 생성되었습니다.");
	}
	

}
public class Ex4_11 {
	//FlowEx11
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int score = 88;
		char grade = ' ';
		
		switch(score) {
			case 9: grade = (score <= 9.5) ? 'A' : 'A' + '+'; break;
			case 8: grade = (score <= 8.5) ? 'B' : 'B' + '+'; break;
			case 7: grade = (score <= 7.5) ? 'C' : 'C' + '+'; break;
			case 6: grade = (score <= 6.5) ? 'D' : 'D' + '+'; break;
			default: grade = 'F';
		}	// end of switch
		System.out.println("당신의 학점은 " + grade + "입니다.");
	}
}